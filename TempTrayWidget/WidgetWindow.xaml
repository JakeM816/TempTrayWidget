<Window  
  x:Class="TempTrayWidget.WidgetWindow"  
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
  WindowStyle="None"  
  AllowsTransparency="True"  
  Background="Transparent"  
  Topmost="True"  
  ShowInTaskbar="False"  
  Width="200" Height="120">
    <!-- bumped height -->

    <Border CornerRadius="6" Background="#CC000000" Padding="8">
        <StackPanel>
            <TextBlock x:Name="CpuText"
                 Foreground="White"
                 FontSize="14"
                 Margin="0,0,0,4"/>
            <TextBlock x:Name="GpuText"
                 Foreground="White"
                 FontSize="14"
                 Margin="0,0,0,4"/>
            <TextBlock x:Name="CpuLoadText"
                 Foreground="White"
                 FontSize="14"
                 Margin="0,0,0,4"/>
            <TextBlock x:Name="GpuLoadText"
                 Foreground="White"
                 FontSize="14"/>
        </StackPanel>
    </Border>
</Window>
